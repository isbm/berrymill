#!/usr/bin/python3

from berry_mill import ImageMill
from typing import Any
import sys
import kiwi.logger

log = kiwi.logging.getLogger('kiwi')

if __name__ == "__main__":
    mill:Any = None
    try:
        mill = ImageMill()
    except Exception as exc:
        log.error("Instantiation error:", exc)
        sys.exit(1)

    try:
        mill.run()
    except Exception as exc:
        log.error("Run error:", exc)
        if mill.args.debug:
            raise
